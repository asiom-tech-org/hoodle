{
  "name": "Hoodle",
  "version": "1.0",
  "description": "Utilities for Moodle",
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://moodle2.cs.huji.ac.il/nu*"],
      "js": ["contentScript.js"],
	  "css": ["contentScript.css"],
	  "run_at": "document_start"
    }
  ],
  "icons": {
    "128": "icon-128.png"
  },
  "manifest_version": 2
}