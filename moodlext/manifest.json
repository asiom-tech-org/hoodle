{
  "name": "Hoodle",
  "version": "0.1",
  "description": "Utilities for Moodle",
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://moodle2.cs.huji.ac.il/nu*"],
	  "exclude_matches": ["*://*/*quiz/attempt*", "*://*/*editsubmission*"],
      "js": ["contentScript.js"],
	  "css": ["contentScript.css"],
	  "run_at": "document_start"
    }
  ],
  "icons": {
    "128": "icon-128.png"
  },
  "manifest_version": 2
}